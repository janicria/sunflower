# This file is used by sunflower's build script to determine the kernel & floppyfs version

[kernel]
# The major version of the kernel.
version_major = "0"

# The minor version of the kernel, see CHANGELOG.md for when to increment this.
version_minor = "2"

# The minor version's patch, increment after every source code change.
version_patch = "2"

# Message updated each patch & displayed on the topbar.
# Must be less than 15 characters in length.
patch_quote = "CA > Exmap"

#  When the filesystem driver was last updated in UTC
[floppyfs]
# The day of the year (Jan 1st = 1)
day = 364

#  The current year
year = 2025
